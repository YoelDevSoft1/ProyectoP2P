API_V1_STR=/api/v1

# Base de datos (usa proveedor gestionado)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis (gestionado)
REDIS_URL=redis://default:PASSWORD@HOST:6379/0
